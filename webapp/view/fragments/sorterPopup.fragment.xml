	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		id="sortDialog"
		confirm="onSortVeterinaryConfirm">
		<sortItems>
			<ViewSettingsItem
				id="sortId"
				text="{i18n>masterSort1}"
				key="id"
                selected="true"/>
			<ViewSettingsItem
				id="sortName"
				text="{i18n>masterSort2}"
				key="name"
                selected="false"/>
			<ViewSettingsItem
				id="sortFirsrBreed"
				text="{i18n>masterSort3}"
				key="breed"
                selected="false"/> 
			<ViewSettingsItem
				id="sortFirstSpecie"
				text="{i18n>masterSort4}"
				key="specie"
                selected="false"/>   
			<ViewSettingsItem
				id="sortFirstOwner"
				text="{i18n>masterSort5}"
				key="owner"
                selected="false"/>   
			<ViewSettingsItem
				id="sortFirstOwnerEmail"
				text="{i18n>masterSort6}"
				key="owner_email"
                selected="false"/>   
			<ViewSettingsItem
				id="sortFirstOwnerPhone"
				text="{i18n>masterSort7}"
